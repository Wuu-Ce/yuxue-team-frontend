/* 缩略文本容器 */
.text-content {
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 1;  /*最多显示1行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
}
@keyframes Save{
  from {
    transform: translateY(-40px)scaleY(0.2);
  }
  to {
    transform: translateY(0) scaleY(1);
  }
}
.show-save {
  animation: Save 0.5s;
  transition: height 0.5s;
  border-radius: 0 0 15rpx 15rpx;
}

.color-cancel {
  color: white;
  background-color: rgb(176, 182, 190) !important;
}

.color-ok {
  color: white;
  background-color: rgb(64, 128, 196) !important;
}

