@font-face {
  font-family: "iconfont"; /* Project id 3334974 */
  src: url('//at.alicdn.com/t/font_3334974_i3624zgl1dk.woff2?t=1651807426521') format('woff2'),
       url('//at.alicdn.com/t/font_3334974_i3624zgl1dk.woff?t=1651807426521') format('woff'),
       url('//at.alicdn.com/t/font_3334974_i3624zgl1dk.ttf?t=1651807426521') format('truetype');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
@keyframes showItem {
  from {
    transform: translateY(-60rpx) scale(0.3, 0.5);
    opacity: 0;
  }
  to {
    transform: translateY(0) scale(1, 1);
    opacity: 1;
  }
}
.icon-jinggao:before {
  content: "\e606";
}


.colorBar {
  position: relative;
  border-radius: 15rpx;
}

.colorBar::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 15rpx;
  height: 100%;
  border-radius: 15rpx 0 0 15rpx;
  pointer-events: none;
  background-color: rgb(64, 128, 196);
}

.wuutag {
  position: absolute;
  display: flex;
  justify-content: space-between;
  top: 0;
  right: 10rpx;
  height: 40rpx;
  pointer-events: none;
}

.wuutag .item {
  display: flex;
  justify-content: space-between;
  margin: 0 10rpx 0 10rpx;
  background-color: rgb(64, 128, 196);
}

.wuutag .left-box {
  width: 8rpx;
  height: 100%;
  border-radius: 0 8rpx 0 0;
  background-color: white;
}

.wuutag .right-box {
  width: 8rpx;
  height: 100%;
  border-radius: 8rpx 0 0 0;
  background-color: white;
}

.wuutag .main-box {
  height: 100%;
  background-color: white;
}

.wuutag .main-content {
  border-radius: 0 0 8rpx 8rpx;
  padding: 4rpx 10rpx 4rpx 10rpx;
  background-color: rgb(64, 128, 196);
  color: aliceblue;
}

/* 更多菜单 */
.moreMenu {
  position:absolute;
  background-color: rgb(64, 128, 196);
  top:100rpx;
  right:-10rpx;
  z-index: 100;
  animation: showItem 0.3s;
}

.moreMenu::before {
  content: "";
  position: absolute;
  top: -8rpx;
  right: 40rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: rgb(64, 128, 196);
  transform: rotate(45deg) skew(15deg, 15deg);
  z-index: 99;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
}