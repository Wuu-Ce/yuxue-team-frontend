@keyframes heightChange {
  0% {
   transform: translateY(-16rpx);
   height: 0;
  }
  100% {
    transform: translateY(0);
    height: 120rpx;
  }
}

@keyframes heightRe {
  0% {
   transform: translateY(-16rpx);
   height: 0;
  }
  100% {
    transform: translateY(0);
    height: 120rpx;
  }
}

@keyframes showItem {
  0% {
    transform: translateY(-80px) scaleX(0.8) scaleY(0.2);
    opacity: 0.2;
  }
  100% {
    transform: translateY(0) scaleX(1) scaleY(1);
    opacity: 1;
  }
}

@keyframes down {
  0% {
    transform: translateY(-80px);
  }
  100% {
    transform: translateY(0);
  }
}

@keyframes up {
  0% {
    transform: translateY(80px);
  }
  100% {
    transform: translateY(0);
  }
}

@keyframes showTip {
  0% {
    transform: translate(80px, -40px)  scaleX(0.2) scaleY(0.2);
    opacity: 0.2;
  }

  100% {}
}

